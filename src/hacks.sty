%% Patch \not to be centered by default
%% ====================================
%% This is expactly the code of centernot.sty,
%% Just with \not replaced by \oldnot
\let\oldnot\not%
\def\not{\mathpalette\@centernot}%
\def\@centernot#1#2{%%
  \mathrel{%
    \rlap{%
      \settowidth\dimen@{$\m@th#1{#2}$}%
      \kern.5\dimen@
      \settowidth\dimen@{$\m@th#1=$}%
      \kern-.5\dimen@
      $\m@th#1\oldnot$%
    }%
    {#2}%
  }%
}

% Spacing hacks for amsmath environments
% ======================================
\frenchspacing
\let\oldleft\left
\let\oldright\right
\def\left{\mathopen{}\mathclose\bgroup\oldleft}
\def\right{\aftergroup\egroup\oldright}
